{
  "name": "generator-component-react",
  "version": "0.0.3",
  "description": "yeoman generator for react component using modern tech",
  "homepage": "",
  "author": {
    "name": "Alan Lu",
    "email": "luxianpo@gmail.com",
    "url": "https://www.luxianpo.com"
  },
  "files": [
    "generators"
  ],
  "main": "generators/index.js",
  "keywords": [
    "component",
    "react",
    "yeoman-generator"
  ],
  "devDependencies": {
    "coveralls": "^3.0.0",
    "eslint": "^4.19.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-config-xo": "^0.20.1",
    "eslint-plugin-prettier": "^2.6.0",
    "husky": "^0.14.3",
    "jest": "^23.3.0",
    "lint-staged": "^6.1.1",
    "nsp": "^2.8.0",
    "pify": "^3.0.0",
    "prettier": "^1.11.1",
    "yeoman-assert": "^3.1.0",
    "yeoman-test": "^1.7.0"
  },
  "engines": {
    "npm": ">= 4.0.0"
  },
  "dependencies": {
    "chalk": "^2.1.0",
    "generator-license": "^5.4.0",
    "humanize-url": "^1.0.1",
    "is-scoped": "^1.0.0",
    "normalize-url": "^2.0.1",
    "underscore.string": "^3.3.4",
    "yeoman-generator": "^2.0.3",
    "yosay": "^2.0.1"
  },
  "jest": {
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/templates/"
    ]
  },
  "scripts": {
    "prepublishOnly": "nsp check",
    "pretest": "eslint .",
    "precommit": "lint-staged",
    "test": "jest"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ],
    "ignore": [
      "**/generators/*/templates/**"
    ]
  },
  "eslintConfig": {
    "extends": [
      "xo",
      "prettier"
    ],
    "env": {
      "jest": true,
      "node": true
    },
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true,
          "printWidth": 90
        }
      ]
    },
    "plugins": [
      "prettier"
    ]
  },
  "repository": "https://github.com/luxp/generator-component-react.git",
  "license": "MIT",
  "publishConfig": {
    "registry": "https://registry.npmjs.com"
  }
}
